@page "/appointment/create"
@using Microsoft.EntityFrameworkCore
@using FargoSpaAndWellness.Models
@inject IDbContextFactory<FargoSpaAndWellness.Data.Migrations.FargoSpaAndWellnessContext> DbFactory
@inject NavigationManager NavigationManager

<PageTitle>Create</PageTitle>

<h1>Create</h1>

<h2>Appointment</h2>
<hr />
<div class="row">
    <div class="col-md-4">
        <EditForm method="post" Model="Appointment" OnValidSubmit="AddAppointment" FormName="create" Enhance>
            <DataAnnotationsValidator />
            <ValidationSummary class="text-danger" role="alert"/>
            <div class="mb-3">
                <span class="text-danger">*</span>
                <label for="customerid" class="form-label">CustomerID:</label> 
                <InputNumber id="customerid" @bind-Value="Appointment.CustomerID" class="form-control" aria-required="true"/> 
                <ValidationMessage For="() => Appointment.CustomerID" class="text-danger" /> 
            </div>        
            <div class="mb-3">
                <span class="text-danger">*</span>
                <label for="employeeid" class="form-label">EmployeeID:</label> 
                <InputNumber id="employeeid" @bind-Value="Appointment.EmployeeID" class="form-control" aria-required="true"/> 
                <ValidationMessage For="() => Appointment.EmployeeID" class="text-danger" /> 
            </div>        
            <div class="mb-3">
                <span class="text-danger">*</span>
                <label for="serviceid" class="form-label">ServiceID:</label> 
                <InputNumber id="serviceid" @bind-Value="Appointment.ServiceID" class="form-control" aria-required="true"/> 
                <ValidationMessage For="() => Appointment.ServiceID" class="text-danger" /> 
            </div>        
            <div class="mb-3">
                <span class="text-danger">*</span>
                <label for="appointmentdate" class="form-label">AppointmentDate:</label> 
                <InputDate id="appointmentdate" @bind-Value="Appointment.AppointmentDate" class="form-control" aria-required="true"/> 
                <ValidationMessage For="() => Appointment.AppointmentDate" class="text-danger" /> 
            </div>        
            <div class="mb-3">
                <span class="text-danger">*</span>
                <label for="status" class="form-label">Status:</label> 
                <InputText id="status" @bind-Value="Appointment.Status" class="form-control" aria-required="true"/> 
                <ValidationMessage For="() => Appointment.Status" class="text-danger" /> 
            </div>        
            <div class="mb-3">
                <label for="notes" class="form-label">Notes:</label> 
                <InputText id="notes" @bind-Value="Appointment.Notes" class="form-control" /> 
                <ValidationMessage For="() => Appointment.Notes" class="text-danger" /> 
            </div>        
            <button type="submit" class="btn btn-primary">Create</button>
        </EditForm>
    </div>
</div>

<div>
    <a href="/appointments">Back to List</a>
</div>

@code {
    [SupplyParameterFromForm]
    private Appointment Appointment { get; set; } = default!;

    protected override void OnInitialized() => Appointment ??= new();

    // To protect from overposting attacks, see https://learn.microsoft.com/aspnet/core/blazor/forms/#mitigate-overposting-attacks.
    private async Task AddAppointment()
    {
        using var context = DbFactory.CreateDbContext();
        context.Appointment.Add(Appointment);
        await context.SaveChangesAsync();
        NavigationManager.NavigateTo("/appointments");
    }
}
